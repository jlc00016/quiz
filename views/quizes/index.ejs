<form method="get" action="">
    <label for="search">Buscar pregunta</label>
    <p>
        <input type="text" name="search" id="search" value="Pregunta..."/>
        <input type="submit" value="Enviar">
    </p>
</form>
<table>
    <% var i; for (i=0; i < quizes.length; i++) { %>
    <tr>
        <td>
            <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
        </td>
        <td>
            <a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a>
        </td>
    </tr>
    <% } %>
</table>
<a href="/quizes/new">
    <button type="button">Crear pregunta</button>
</a>